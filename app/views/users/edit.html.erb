 <%# end %>
<%if @user.errors.any? %>
 <div id = "error_explanation">
   <h2><%= pluralize(@user.errors.count, "error")%> prevented user from being updated:</h2>
   <ul>
    <% @user.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <% end %>
   </ul>
 </div>
<% end %>

<%= form_for @user do |f|%>
  <%= f.label :username%>
  <%= f.text_field :username, placeholder: 'john wick'%><br /><br />
  <%= f.label :email%>
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <%= f.email_field :email, placeholder: 'email@example.com'%><br /><br />
  <%= f.label :password%>
  <%= f.password_field :password%><br /><br />
  <%= f.submit%>
<% end %>